{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "-DNDBEUG",
                "-DSFML_STATIC", //SFML ddls unrequired
                "-IC:\\SFML-3.0.2\\include",
                "${file}",
                "-LC:\\SFML-3.0.2\\lib",
                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-system-s",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-static-libgcc",    //Static mingw
                "-static-libstdc++", //^
                "-static",           //^
                "-lwinpthread",
                "-mwindows", //hides console (removes cout)
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}